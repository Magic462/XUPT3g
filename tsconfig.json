{
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "incremental": true,
    "target": "ES2020",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx", // 适用于 React 17+
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true, // 跳过node_modules中的类型检查
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
